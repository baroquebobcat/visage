#!/usr/bin/env ruby

require 'pathname'

@root = Pathname.new(File.dirname(__FILE__)).parent.expand_path
action = ARGV[0]

case action
when "start"
  require 'rubygems'
  require 'rack'
  config = @root.join('config.ru').to_s
  Rack::Server.start(:config => config, :Port => 9292)
else
  puts "Usage: visage start"
end

